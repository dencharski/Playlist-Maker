<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainLayoutColor">
        <item name="android:background">@color/main_background_color</item>

    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">

        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_textColor</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/button_textColor</item>
        <item name="elevation">0dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsTextViewItemStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SettingsImageViewItemStyles">
        <item name="tint">@color/image_color</item>
    </style>

    <style name="SettingsTextViewAndImageViewItemStyle">
        <item name="android:drawableTint">@color/image_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SettingsImageViewBackArrowStyles">
        <item name="tint">@color/button_textColor</item>
    </style>

    <style name="SettingsLightDarkThemeSwitchStyle">
        <item name="trackTint">@color/search_layout_color</item>
        <item name="thumbTint">@color/image_color</item>
    </style>

    <style name="SettingsLightDarkSwitchMaterial">
        <item name="trackTint">@color/search_layout_color</item>
        <item name="thumbTint">@color/image_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SearchLayoutStyles">
        <item name="android:background">@color/search_layout_color</item>
    </style>

    <style name="SearchImageViewStyle">
        <item name="tint">@color/image_color</item>
    </style>

    <style name="SearchItemTrackImageViewStyle">
        <item name="tint">@color/image_color</item>

    </style>

    <style name="SearchItemTrackNameTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SearchItemTrackInfoTextStyle">
        <item name="android:textColor">@color/image_color</item>
        <item name="android:textSize">@dimen/search_track_item_info_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SearchItemTrackImageDotPointImageStyle">
        <item name="tint">@color/image_color</item>
    </style>

    <style name="SearchItemTrackButtonRefreshStyle">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/button_textColor</item>
        <item name="android:textSize">@dimen/search_track_button_refresh_text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SearchItemTrackErrorInternetConnectionImageStyle">
        <item name="android:src">@drawable/light_mode</item>

    </style>

    <style name="SearchItemTrackEmptyResultImageStyle">
        <item name="android:src">@drawable/light_mode_empty</item>
    </style>

    <style name="SearchItemTrackTextViewStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/search_track_text_size</item>
        <item name="android:textColor">@color/button_textColor</item>

    </style>


    <style name="PlayerTextViewTrackNameStyle">
        <item name="android:textColor">@color/button_textColor</item>
    </style>

    <style name="PlayerGrayButtonStyle">
        <item name="backgroundTint">@color/light_gray</item>


    </style>

    <style name="PlayerButtonPlayTrackStyle">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/button_textColor</item>
        <item name="android:padding">@dimen/top_title_margin</item>
    </style>

    <style name="PlayerTextViewLabelsStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/image_color</item>
        <item name="android:textSize">@dimen/player_text_view_info_text_size</item>

    </style>

    <style name="PlayerTextViewInfoStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/button_textColor</item>
        <item name="android:textSize">@dimen/player_text_view_info_text_size</item>
        <item name="android:gravity">end</item>

    </style>

    <style name="MediatekaTabStyle">
        <item name="android:background">@color/white</item>
        <item name="tabIndicatorColor">@color/button_textColor</item>
        <item name="tabTextColor">@color/button_textColor</item>

    </style>

    <style name="MediatekaTextViewStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/search_track_text_size</item>
        <item name="android:textColor">@color/dark_black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BottomNavigationViewStyle">

        <item name="itemIconTint">@drawable/bottom_nav_item_color_light</item>
        <item name="itemTextColor">@drawable/bottom_nav_item_color_light</item>
        <item name="android:background">@color/title_textColor</item>

    </style>

    <style name="BottomNavigationBorderLineStyle">
        <item name="android:background">@color/search_layout_color</item>
    </style>

    <style name="MainActivityColorStyle">
        <item name="android:background">@color/title_textColor</item>
    </style>

    <style name="CreatePlaylistEditTextTextStyle">
        <item name="android:textColor">@color/button_textColor</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColorHint">@color/button_textColor</item>
    </style>

    <style name="CreatePlaylistTextViewHintStyle">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/main_background_color</item>
        <item name="android:textSize">@dimen/create_track_hint_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="PlayListItemStyle">
        <item name="android:textColor">@color/button_textColor</item>
        <item name="android:textSize">@dimen/create_track_hint_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ViewInBottomSheetStyle">
        <item name="background">@color/search_layout_color</item>
    </style>

    <style name="BottomSheetStyle">
        <item name="android:background">@drawable/rectangle_for_bottom_sheet</item>
    </style>

    <style name="PlayListItemViewCardStyle">
        <item name="android:backgroundTint">@color/white</item>
    </style>

</resources>