<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainLayoutColor">
        <item name="android:background">@color/main_background_color</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">

        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_textColor</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/button_textColor</item>
        <item name="elevation">0dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsTextViewItemStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsImageViewItemStyles">
        <item name="tint">@color/image_color</item>
    </style>

    <style name="SettingsImageViewBackArrowStyles">
        <item name="tint">@color/button_textColor</item>
    </style>

    <style name="SearchLayoutStyles" >
        <item name="android:background">@color/search_layout_color</item>
    </style>

    <style name="SearchImageViewStyle">
        <item name="tint">@color/image_color</item>
    </style>

    <style name="SearchEditTextStyle">
    </style>
</resources>