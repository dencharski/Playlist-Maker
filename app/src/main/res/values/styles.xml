<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainLayoutColor">
        <item name="android:background">@color/main_background_color</item>
    </style>

    <style name="MainButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/base_margin</item>
        <item name="android:layout_marginEnd">@dimen/base_margin</item>
        <item name="android:layout_marginBottom">@dimen/base_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_textColor</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/button_textColor</item>
        <item name="elevation">0dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsTextViewItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_settings_menu_start</item>
        <item name="android:layout_marginTop">@dimen/margin_settings_menu_top</item>
        <item name="android:layout_marginEnd">@dimen/margin_settings_menu_end</item>
        <item name="android:layout_marginBottom">@dimen/margin_settings_menu_bottom</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsImageViewItemStyles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_settings_menu_top</item>
        <item name="android:layout_marginEnd">@dimen/margin_settings_menu_start</item>
        <item name="android:layout_marginBottom">@dimen/margin_settings_menu_bottom</item>
        <item name="tint">@color/image_color</item>
    </style>

    <style name="SettingsImageViewBackArrowStyles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_settings_menu_top</item>
        <item name="android:layout_marginEnd">@dimen/margin_settings_menu_start</item>
        <item name="android:layout_marginBottom">@dimen/margin_settings_menu_bottom</item>
        <item name="tint">@color/button_textColor</item>
    </style>
</resources>