<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_settings_menu_start"
            android:layout_marginTop="@dimen/margin_settings_menu_start"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="@dimen/margin_settings_menu_start"
            android:src="@drawable/baseline_arrow_back_24"
            app:tint="@color/button_textColor" />

        <TextView
            android:id="@+id/text_view_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/margin_settings_menu_end"
            android:layout_marginBottom="@dimen/margin_settings_menu_end"
            android:layout_weight="1"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textSize="@dimen/primary_text_size" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_dark_theme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_settings_menu_start"
            android:layout_marginTop="@dimen/margin_settings_menu_top"
            android:layout_marginEnd="@dimen/margin_settings_menu_end"
            android:layout_marginBottom="@dimen/margin_settings_menu_bottom"
            android:layout_weight="1"
            android:text="@string/dark_theme"
            android:textColor="@color/black"
            android:textSize="@dimen/settings_text_size" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_dark_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="6dp"


            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_shared"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_settings_menu_start"
            android:layout_marginTop="@dimen/margin_settings_menu_top"
            android:layout_marginEnd="@dimen/margin_settings_menu_end"
            android:layout_marginBottom="@dimen/margin_settings_menu_bottom"
            android:layout_weight="1"
            android:text="@string/shared_app"
            android:textColor="@color/black"
            android:textSize="@dimen/settings_text_size" />

        <ImageView
            android:id="@+id/image_view_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_settings_menu_top"
            android:layout_marginEnd="@dimen/margin_settings_menu_start"
            android:layout_marginBottom="@dimen/margin_settings_menu_bottom"
            android:src="@drawable/baseline_share_24"
            app:tint="@color/image_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_write_support"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_settings_menu_start"
            android:layout_marginTop="@dimen/margin_settings_menu_top"
            android:layout_marginEnd="@dimen/margin_settings_menu_end"
            android:layout_marginBottom="@dimen/margin_settings_menu_bottom"
            android:layout_weight="1"
            android:text="@string/write_support"
            android:textColor="@color/black"
            android:textSize="@dimen/settings_text_size" />

        <ImageView
            android:id="@+id/image_view_write_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_settings_menu_top"
            android:layout_marginEnd="@dimen/margin_settings_menu_start"
            android:layout_marginBottom="@dimen/margin_settings_menu_bottom"
            android:src="@drawable/baseline_support_agent_24"
            app:tint="@color/image_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_user_agreement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_settings_menu_start"
            android:layout_marginTop="@dimen/margin_settings_menu_top"
            android:layout_marginEnd="@dimen/margin_settings_menu_end"
            android:layout_marginBottom="@dimen/margin_settings_menu_bottom"
            android:layout_weight="1"
            android:text="@string/user_agreement"
            android:textColor="@color/black"
            android:textSize="@dimen/settings_text_size" />

        <ImageView
            android:id="@+id/image_view_user_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_settings_menu_top"
            android:layout_marginEnd="@dimen/margin_settings_menu_start"
            android:layout_marginBottom="@dimen/margin_settings_menu_bottom"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            app:tint="@color/image_color" />
    </LinearLayout>
</LinearLayout>